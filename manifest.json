{
    "manifest_version": 3,
    "name": "Entry Story Stats",
    "version": "1.0.2",
    "permissions": ["storage", "alarms", "tabs", "scripting"],
    "host_permissions": ["https://playentry.org/*"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://playentry.org/community/entrystory/list*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}
