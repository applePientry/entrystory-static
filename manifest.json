{
    "manifest_version": 3,
    "name": "Entry Story Stats",
    "version": "1.0",
    "permissions": ["storage", "alarms", "tabs", "scripting"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://playentry.org/community/entrystory/list*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }
}
